  <div class="form-group floating-label-form-group controls">
    <label>Title</label>
    <input
      type="text"
      class="form-control"
      value="<%=post.title%>"
      placeholder="Title"
      name="title"
      id="title"
      required
      data-validation-required-message="Please enter a title."
    />
    <p class="help-block text-danger"></p>
  </div>
</div>
<div class="control-group">
  <div class="form-group floating-label-form-group controls">
    <label>Description</label>
    <input
      type="text"
      name="description"
      value="<%=post.description%>"
      class="form-control"
      placeholder="Description"
      id="description"
    />
    <p class="help-block text-danger"></p>
  </div>
</div>
<div class="control-group">
  <div class="form-group col-xs-12 floating-label-form-group controls">
    <label>Author</label>
    <input
      type="text"
      class="form-control"
      value="<%=post.author%>"
      name="author"
      placeholder="Author"
      id="author"
      required
      data-validation-required-message="Please enter author's name"
    />
    <p class="help-block text-danger"></p>
  </div>
</div>
<div class="control-group">
  <div class="form-group floating-label-form-group controls">
    <label>Article</label>
    <textarea
      rows="10"
      class="form-control"
      name="article"
      placeholder="Article"
      id="article"
      required
      data-validation-required-message="Please enter the post content"
    >
<%=post.markdown%></textarea
    >
    <p class="help-block text-danger"></p>
  </div>
</div>
<br />
<div id="success"></div>
